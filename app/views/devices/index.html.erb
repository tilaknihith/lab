<table class="table">
  <thead class="thead-dark">


  
    <tr>
    <th> Id</th>
    <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
   
      <tr>
      <td> <%= device.id%></td>
   <td> <%= device.name%></td>
